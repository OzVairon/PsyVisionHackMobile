<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="16dp"
              android:paddingRight="16dp">

    <TextView
        android:id="@+id/audio_emotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/emotions_padding_vertical"
        android:paddingTop="@dimen/emotions_padding_vertical"
        android:text="audio emotion"
        android:textColor="#ff0000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/image_emotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/emotions_padding_vertical"
        android:paddingTop="@dimen/emotions_padding_vertical"
        android:text="image emotion"
        android:textColor="#ff0000"
        android:textStyle="bold"/>

</LinearLayout>
